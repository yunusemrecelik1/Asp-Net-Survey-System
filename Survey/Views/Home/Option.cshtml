@model IEnumerable<Survey.Models.QuestionOption>

@{
    int a = ViewBag.yolla;
}

<div class="card">
    <div class="card-body">
        <form action="/Home/Option" method="post">
            <div class="form-group">
                <input type="hidden" name="QuestionOptionID" value="@ViewBag.yolla" />

                <label for="input-1"> Şıkkı Giriniz </label>

                <input type="text" class="form-control" name="QuesOption" id="input-1" placeholder="Şıkkı Giriniz" maxlength="250">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-round btn-success shadow-success px-5"><i class="icon-lock"></i> Kaydet</button>
            </div>
        </form>
    </div>
</div>

<table id="example" class="table table-bordered" cellpadding="0" style="width:100%;">
    <thead>
        <tr class="bg-dark" style="color:darkblue">
            <td> Şık</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (ViewBag.yolla == item.QuestionOptionID)
            {
                <tr>
                    <td>@item.QuesOption</td>
                </tr>
            }

        }
    </tbody>
</table>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<p hidden="hidden" id="p1">http://localhost:60829/AnsQues/Ans/@ViewBag.yolla</p>
<button class="btn btn-round btn-info px-5" onclick="copyToClipboard('#p1')">Soru Linkini Kopyala</button>
<script>
    function copyToClipboard(element) {
        var $temp = $("<input>");
        $("body").append($temp);
        $temp.val($(element).text()).select();
        document.execCommand("copy");
        $temp.remove();
        alert(" Soru Linki Kopyalandı");
    }

</script>