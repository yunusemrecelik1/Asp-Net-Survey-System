
@{
    ViewBag.Title = "AddQuestion";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}
<div id="content">
    <div id="content-header">
        <br />
        <h1>Anket Ekle</h1>
    </div>
    <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>Soru Ekle</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <form action="/Admin/AddQuestion" method="post" class="form-horizontal">
                            <div class="control-group">
                                <label class="control-label">Soruyu Giriniz :</label>
                                <div class="controls">
                                    <input type="text" class="span11" name="QuestionLine" id="input-1" placeholder="Soruyu Giriniz" maxlength="250" required>
                                </div>
                            </div>
                            
                            <div class="form-actions">
                                <button type="submit" class="btn btn-success">Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>