@model IEnumerable<Survey.Models.Question>
@{
    ViewBag.Title = "Index";
}
<div id="content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-content nopadding">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Sorular</th>
                                    <th>Anket Oylamak için tıkla</th>      
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr class="odd gradeX">
                                    <td>@item.QuestionLine</td>
                                    <td>
                                        <a class="btn btn-round btn-success shadow-success px-5" href="/AnsQues/Ans/@item.id"> Anketi Oylamak için tıkla</a>
                                    </td>
                                    
                                </tr>   
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
